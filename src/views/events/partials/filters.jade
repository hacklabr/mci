nav

    .filters-container

        .filter-item.date-filter(ng-class="{filled:eventSearch.startDate}")

            a.clear-filter(href="javascript:void(0)" ng-click="datepicker.clear()" title="Limpar filtro por data" ng-show="eventSearch.startDate") &#10060;

            .date-filter-content

                .date-start.datepicker-container

                    a.button(ng-click="datepicker.start.toggle()" href="javascript:void(0);")
                        span.entypo &#128197;
                        span.the-date(ng-show="eventSearch.startDate") {{datepicker.start.view}} 
                        
                    span.until(ng-show="eventSearch.startDate") até

                    .datepicker(pickadate ng-model="eventSearch.startDate" ng-show="datepicker.start.opened" min-date="datepicker.start.minDate" max-date="datepicker.start.maxDate" default-date="datepicker.start.minDate" prev-label="'anterior'" next-label="'próximo'")

                .date-end.datepicker-container(ng-show="eventSearch.startDate")

                    a.button(ng-click="datepicker.end.toggle()" href="javascript:void(0);")
                        span.entypo &#128197;
                        span.the-date(ng-show="eventSearch.endDate") {{datepicker.end.view}}
                        span.the-date(ng-hide="eventSearch.endDate") {{datepicker.start.view}}

                    .datepicker(pickadate ng-model="eventSearch.endDate" ng-show="datepicker.end.opened" min-date="datepicker.end.minDate" max-date="datepicker.end.maxDate" default-date="eventSearch.startDate" prev-label="'anterior'" next-label="'próximo'")

        .filter-item.list-filter
            span.label Filtre por linguagens
            ul.linguagem-list
                li(ng-repeat="linguagem in linguagens" ng-class="{active: hasFilter('linguagem', linguagem), inactive: !hasFilter('linguagem', linguagem)}")
                    span.entypo(href="javascript:void(0)") &#10006;
                    a(href="javascript:void(0);" ng-click="toggleFilter('linguagem', linguagem)") 
                         {{linguagem}}
                    
                    
        .filter-item.list-filter
            span.label Filtre por projeto
            ul.linguagem-list
                li(ng-repeat="project in projects" ng-class="{active: hasFilter('project', project), inactive: !hasFilter('project', project)}")
                    span.entypo(href="javascript:void(0)") &#10006;
                    a(href="javascript:void(0);" ng-click="toggleFilter('project', project)")
                         {{project}}
                        
                        
        .filter-item.list-filter.space(ng-mouseleave="spaceSearch.name = ''" ng-mouseenter="focusSpaceSearch()")
            span.label Filtre por espaço
            input(id='space-search' type="text" ng-model="spaceSearch.name" placeholder="Busque por um espaço...")
            ul.space-list
                li(ng-repeat="space in spaces" ng-class="{active: hasFilter('space', space.id), inactive: !hasFilter('space', space.id), hidden: spaceSearch.name && space.name.toLowerCase().indexOf(spaceSearch.name.toLowerCase()) === -1}")
                    span.entypo(href="javascript:void(0)") &#10006;
                    a(href="javascript:void(0);" ng-click="toggleFilter('space', space.id)")
                         {{space.name}}


        .filter-item.text-filter
            input(type="text" ng-model="activeFilters.keyword" ng-model-options="{ updateOn: 'default blur', debounce: { 'default': 500, 'blur': 0 } }" placeholder="Faça uma busca...")
            
        .filter-item.tick-filter(ng-show="(isEventFiltering() || tag || space) && !eventSearch.startDate && service.isHappening()" ng-class="{enabled:isFutureEvents}" ng-click="toggleFutureEvents()") Eventos futuros


    a.close.entypo(href="javascript:void(0)" ng-click="clearFilters()" ng-show="isFiltering()" title="Fechar busca") &#10060;
