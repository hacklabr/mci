article#highlight-event(ng-show="featured")
	h2 {{featured.label}}
	.image(style="background-image:url(http://lorempixum.com/1920/500/)")
	.highlight-content
		header
			h3
				a(href="/agenda/{{featured.event.id}}/") {{featured.event.name}}
		section.meta.clearfix
			p.time(ng-show="service.isHappening()")
				span.entypo &#128340;
				span(fromnow date="featured.occurrence.timestamp")
			p.date(ng-hide="service.isHappening()")
				span.entypo &#128340;
				| {{featured.occurrence.startsOn}} {{featured.occurrence.startsAt}}
			p.distance(ng-show="featured.type == 'near'")
				span.entypo &#128197;
				strong {{featured.space.kmDistance}} km 
				| de vocÃª
		section.content
			p.description {{featured.event.shortDescription}}
	aside.space(ng-show="featured.space")
		h3 {{featured.space.name}}