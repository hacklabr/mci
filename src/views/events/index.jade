section#list-event(ng-class="{tag: tag}")
    .ui-view
    header.list-header.main-header.clearfix
        .clearfix
            h2(ng-show="tag || space")
                a(href= config.baseUri+"agenda/") Agenda
            h1
                span(ng-hide="tag || space") Agenda
                span.tag(ng-show="tag || space") {{tag || space.name}}
            include partials/filters
        .clearfix
            p(ng-show="tag") {{service.getTagDescription(tag)}}

    section#event-list.main-content
        include partials/featured
        
        section.event-results
            
            ul.event-list(ng-show="filteredEvents.length")
                li.clearfix(ng-repeat="event in (filteredEvents = (events | filter:eventFilter.$ | linguagemEvents:activeFilters.linguagem | tagEvents:activeFilters.tag | spaceEvents:space | futureEvents:isFutureEvents | byDateEvents:eventSearch.startDate:eventSearch.endDate))" ng-controller="EventController" ng-click="accessEvent(event)")
                    include partials/event-list-item

            p.not-found(ng-hide="filteredEvents.length") Nenhum evento foi enScontrado
            

        .below.clearfix

            include partials/spaces
            include partials/linguagens
            include partials/tags
